<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.monthly.MonthlyFragment">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_margin="25dp"
        android:padding="4dp"
        android:orientation="horizontal"
        android:background="@drawable/inputdesign"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/monthly"
            />
        <LinearLayout
            android:layout_width="230dp"
            android:layout_marginLeft="2dp"
            android:orientation="vertical"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/monthly_yearname"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:textSize="25dp"
                android:padding="6dp"
                android:text="Here Details :"
                />
            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/monthly_credit"
                    android:layout_width="115dp"
                    android:layout_height="30dp"
                    android:background="@color/green"
                    android:text="amount"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/monthly_devit"
                    android:layout_width="115dp"
                    android:layout_height="30dp"
                    android:text="amount"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:background="@color/red"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/monthly_item_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>